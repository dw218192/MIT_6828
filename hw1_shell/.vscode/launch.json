    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/sh",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                /*
                {
                    "description": "Follow forked child",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": false
                },
                {
                    "description": "Detach forked process",
                    "text": "set detach-on-fork on",
                    "ignoreFailures": false
                }
                */
            ],
            "preLaunchTask": "C/C++: gcc build active file"
        }

    ]
}